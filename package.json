		"sharp": "^0.32.6",
		"slugify": "^1.6.6",
		"svelte-local-storage-store": "^0.6.4",
		"svelte-tiny-virtual-list": "^2.0.5",
		"sveltejs-tippy": "^3.0.0",
		"uuid": "^9.0.1",
		"vcard4": "^3.1.5",
		"xml2js": "^0.5.0",
		"xss": "^1.0.14",
		"zxcvbn": "^4.4.2"
	}
}
